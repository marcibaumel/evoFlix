<Window x:Class="WPF_API_DEMO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_API_DEMO"
        mc:Ignorable="d" FontSize="22" Loaded="Window_Loaded"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="prviousImageButton" Padding="50" Margin="15">Previous</Button>
            <Button x:Name="sunInformationButton" Padding="50" Margin="15">Sun Information</Button>
            <Button x:Name="nextImageButton" Padding="50" Margin="15">Next</Button>
        </StackPanel>
        <Image Grid.Row="1" x:Name="comicImage"/>
    </Grid>
</Window>
